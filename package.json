{
  "name": "register-a-food-business-service",
  "version": "11.0.0",
  "description": "",
  "main": "src/app.js",
  "engines": {
    "node": ">=12.13"
  },
  "scripts": {
    "start": "node ./src/app.js",
    "local:start": "export $(grep -v '^#' .env | xargs -d '\n') && nodemon src/app.js",
    "local:start:docker": "node src/db/check-connection.js && npm run migrate:local && nodemon src/app.js",
    "local:debug": "export $(grep -v '^#' .env | xargs -d '\n') && nodemon --inspect src/app.js",
    "test": "jest ./src --coverage",
    "test:unit:ci": "export TEST_TYPE=unit && jest ./src --coverage",
    "test:raw": "export TEST_TYPE=unit && jest",
    "test:watch": "export TEST_TYPE=unit && jest ./src --watch",
    "test:integration": "export TEST_TYPE=integration && jest tests/integration/*.js",
    "test:contract": "jest tests/contract/*.js",
    "test:component": "cucumber-js",
    "test:component:local": "export $(grep -v '^#' .env | xargs -d '\n') && cucumber-js",
    "test:component:ci": "mkdir -p reports && cucumber-js --format=json | cucumber-junit > reports/TEST-component.xml",
    "test:securityall": "snyk wizard",
    "test:security": "snyk wizard --severity-threshold=medium",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:verify": "prettier --list-different '{src,tests}/**/*.js'",
    "format": "prettier --write '{src,tests}/**/*.js'",
    "seed:configdb": "node src/connectors/configDb/configDb-seed/runSeedScripts",
    "migrate": "sequelize db:migrate",
    "migrate:local": "export NODE_ENV=local && sequelize db:migrate",
    "cosmos-migrations": "node scripts/remove-cosmos-test-registrations && node scripts/migrate-all-data-to-cosmos && node scripts/update-fields-in-cosmos && node scripts/update-date-strings-to-dates && node scripts/rename-metadata-and-directLcSubmission.js && node scripts/add-submission-language.js",
    "cosmos-migrations:local": "export NODE_ENV=local && node scripts/remove-cosmos-test-registrations && node scripts/migrate-all-data-to-cosmos && node scripts/update-fields-in-cosmos && node scripts/update-date-strings-to-dates && node scripts/rename-metadata-to-declaration.js && node scripts/add-submission-language.js",
    "remove-test-registrations": "node scripts/remove-cosmos-test-registrations",
    "insert-missing-registrations": "node scripts/migrate-all-data-to-cosmos",
    "update-cosmos-fields": "node scripts/update-fields-in-cosmos",
    "update-dates": "node scripts/update-date-strings-to-dates",
    "rename-fields": "node scripts/rename-metadata-and-directLcSubmission",
    "anonymise-cosmos-data": "node scripts/anonymise-cosmos-data.js",
    "jsdoc": "rm -rf ./docs/jsdoc && jsdoc -r ./src -d ./docs/jsdoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FoodStandardsAgency/register-a-food-business-service.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FoodStandardsAgency/register-a-food-business-service#issues"
  },
  "homepage": "https://github.com/FoodStandardsAgency/register-a-food-business-service#readme",
  "dependencies": {
    "@slice-and-dice/fsa-rof": "1.0.7",
    "@slice-and-dice/register-a-food-business-validation": "1.21.2",
    "applicationinsights": "^1.7.6",
    "applicationinsights-native-metrics": "0.0.5",
    "body-parser": "^1.19.0",
    "cls-hooked": "^4.2.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-cls-hooked": "^0.3.8",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.23.1",
    "https-proxy-agent": "^5.0.0",
    "inquirer": "^7.2.0",
    "jsonschema": "^1.2.6",
    "lodash": "^4.17.15",
    "moment": "^2.26.0",
    "mongodb": "^3.5.9",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.0",
    "nodemon": "^2.0.4",
    "notifications-node-client": "^4.7.3",
    "pdfmake": "^0.1.65",
    "pg": "^8.2.1",
    "promise-retry": "^1.1.1",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.8",
    "sequelize": "^5.21.13",
    "sequelize-cli": "^5.5.1",
    "uuid": "^7.0.3",
    "validator": "^13.1.1",
    "winston": "^3.2.1",
    "winston-azure-application-insights": "^2.0.0",
    "winston-elasticsearch": "^0.9.0",
    "winston-logstash": "^0.4.0"
  },
  "devDependencies": {
    "cucumber": "^6.0.5",
    "cucumber-junit": "^1.7.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^24.9.0",
    "jest-junit": "^10.0.0",
    "jest-transform-stealthy-require": "^1.0.0",
    "jsdoc": "^3.6.4",
    "prettier": "^2.0.5",
    "snyk": "^1.342.2"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "env": {
      "jest/globals": true
    },
    "plugins": [
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "rules": {
      "no-trailing-spaces": "error",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error",
      "node/exports-style": [
        "error",
        "module.exports"
      ],
      "node/file-extension-in-import": [
        "error",
        "always"
      ],
      "node/prefer-global/buffer": [
        "error",
        "always"
      ],
      "node/prefer-global/console": [
        "error",
        "always"
      ],
      "node/prefer-global/process": [
        "error",
        "always"
      ],
      "node/prefer-global/url-search-params": [
        "error",
        "always"
      ],
      "node/prefer-global/url": [
        "error",
        "always"
      ],
      "node/prefer-promises/dns": "error",
      "node/prefer-promises/fs": "error",
      "node/no-unpublished-require": [
        "error",
        {
          "allowModules": [
            "cucumber",
            "jest-transform-stealthy-require"
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "coverage",
    "scripts",
    "node_modules"
  ],
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "node_modules",
      "tests",
      "scripts",
      "features",
      "docs"
    ],
    "watch": [
      "src"
    ],
    "ext": "js json"
  }
}
